@model IEnumerable<CashOutflow.Models.Item>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lend Items List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Item" asp-action="Create">Create new Item</a>
        </div>
    </div>
    <br />

@if(Model.Count() > 0 )
{
    <table class="table table-bordered table-striped", style="width:100%;">
        <thead>
             <tr>
                   <th>Item Name</th>
                  <th>Debtor</th>
                   <th>Lender</th>
            </tr>
         </thead>
         <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td width="30%">@item.ItemName</td>
                     <td width="30%">@item.Debtor</td>
                     <td width="30%">@item.Lender</td>

                     <td width="30%">
                         <div class="w-100 btn-group" role="group">
                             <a class="btn btn-outline-danger mx-1" asp-area="" asp-controller="Item" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
                             <a class="btn btn-outline-primary mx-1" asp-area="" asp-controller="Item" asp-route-Id="@item.Id" asp-action="Update">Update</a>
                         </div>
                     </td>
                     
                 </tr>
             }
        </tbody>
    </table>
}
else
{
            <p> No items created yet </p>
}
   
   
</div>