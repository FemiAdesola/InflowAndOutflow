@model IEnumerable<CashOutflow.Models.Expenses>


<div class="container p-3">
    @*validation*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*//*@
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Expenses" asp-action="Create">Create new Expenses</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" , style="width:100%;">
            <thead>
                <tr>
                    <th>Expenses Name</th>
                    <th>Amount</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%">@expense.ExpensesName</td>
                        <td width="35%">@expense.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-outline-danger mx-1" asp-area="" asp-controller="Expenses" asp-route-Id="@expense.Id" asp-action="Delete">Delete</a>
                                <a class="btn btn-outline-primary mx-1" asp-area="" asp-controller="Expenses" asp-route-Id="@expense.Id" asp-action="Update">Update</a>
                            </div>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> No expenses created yet </p>
    }


</div>